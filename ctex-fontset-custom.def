\ProvidesExplFile{ctex-fontset-custom.def}
  {\ExplFileDate}{1.0.0}{\ExplFileDescription}
\setCJKmainfont { NotoSerifSC-Regular.otf }
  [
    Path       = fonts/,
    BoldFont   = NotoSerifSC-Bold.otf,
    ItalicFont = STKAITI.ttf
  ]
\setCJKsansfont { NotoSansSC-Regular      }
  [
    Path       = fonts/,
    Extension  = .otf,
    BoldFont   = NotoSansSC-Bold
  ]
\setCJKmonofont { STFANGSO.ttf }
  [ Path = fonts/ ]
\setCJKfamilyfont { zhsong } { NotoSerifSC-Regular }
  [
    Path       = fonts/,
    Extension  = .otf,
    BoldFont   = NotoSerifSC-Bold
  ]
\setCJKfamilyfont { zhhei  } { NotoSansSC-Regular  }
  [
    Path       = fonts/,
    Extension  = .otf,
    BoldFont   = NotoSansSC-Bold
  ]
\setCJKfamilyfont { zhfs   } { STFANGSO.ttf }
  [ Path = fonts/ ]
\setCJKfamilyfont { zhkai  } { STKAITI.ttf }
  [ Path = fonts/ ]
\NewDocumentCommand \songti   { } { \CJKfamily { zhsong  } }
\NewDocumentCommand \heiti    { } { \CJKfamily { zhhei   } }
\NewDocumentCommand \fangsong { } { \CJKfamily { zhfs    } }
\NewDocumentCommand \kaishu   { } { \CJKfamily { zhkai   } }
